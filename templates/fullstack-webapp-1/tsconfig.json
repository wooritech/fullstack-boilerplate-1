{
  "compilerOptions": {
    // Next.js 자동 설정
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // 커스텀 설정
    // 경로 별칭: https://nextjs.org/docs/advanced-features/module-path-aliases
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // eslint 적용할 js파일 목록
    ".eslintrc.js",
    "next.config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
